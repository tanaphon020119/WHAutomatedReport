
@{
    ViewData["Title"] = "Register3";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> @ViewData["Title"] </title>
    <link rel="shortcut icon" href="~/assets/images/favicon.png" type="image/x-icon" />
    <!-- ================== APP CSS START ================== -->
    <link rel="stylesheet" href="~/assets/css/style.css" />
    <!-- ================== APP CSS END ================== -->
</head>
<body>
    <div class="login-container d-flex align-items-center">
        <div class="login-content">
            <div class="login-inner-container">
                <div class="left-content text-center">
                    <img src="~/assets/images/logo.png" alt="let start">
                </div>
                <div class="right-content">
                    <div class="form-content">
                        <h3>Signup to app</h3>
                        <form action="#">
                            <div class="form-group">
                                <fieldset>
                                    <div class="icon">
                                        <i class="mdi mdi-account-outline"></i>
                                    </div>
                                    <input class="form-control" placeholder="Username or Email" name="email" type="text" />
                                </fieldset>
                            </div>
                            <div class="form-group">
                                <fieldset>
                                    <div class="icon">
                                        <i class="mdi mdi-lock-outline"></i>
                                    </div>
                                    <input class="form-control" placeholder="Password" name="password" type="Password" />
                                </fieldset>
                            </div>
                            <div class="form-group">
                                <fieldset>
                                    <div class="icon">
                                        <i class="mdi mdi-lock-outline"></i>
                                    </div>
                                    <input class="form-control" placeholder="Password" name="password" type="Confirm Password" />
                                </fieldset>
                            </div>
                            <div class="form-group d-flex">
                                <div class="form-check mt-0">
                                    <label class="custom-checkbox success-checkbox">
                                        <input type="checkbox" class="form-check-input" checked=""> Remember me
                                        <i class="input-helper"></i>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group text-center">
                                <button class="btn btn-block btn-primary">Register</button>
                                <p class="small">Already have and account ? <a href="/Auth/@Pages.Login3.Value">Login</a></p>
                            </div>
                        </form>
                    </div>
                    <div class="third-party-login">
                        <div class="google-login">
                            <a href="javascript:void(0)">Signup with google</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

