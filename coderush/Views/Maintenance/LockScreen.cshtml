
@{
    ViewData["Title"] = "LockScreen";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> @ViewData["Title"] </title>
    <link rel="shortcut icon" href="~/assets/images/favicon.png" type="image/x-icon" />
    <!-- ================== APP CSS START ================== -->
    <link rel="stylesheet" href="~/assets/css/style.css" />
    <!-- ================== APP CSS END ================== -->
</head>
<body>
    <div class="auth-container d-flex align-items-center">
        <div class="col-md-6 col-lg-4 mx-auto">
            <div class="p-5 text-center">
                <img src="~/assets/images/users-thumbs/user-5.jpg" class="rounded lock-profile-img" alt="profile image">
                <form class="pt-5">
                    <div class="form-group">
                        <label for="examplePassword1">Password to unlock</label>
                        <input type="password" class="form-control text-center" placeholder="Password">
                    </div>
                    <div class="mt-5">
                        <a class="btn btn-block btn-success btn-lg font-weight-500" href="javascript:void(0)">Unlock</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

