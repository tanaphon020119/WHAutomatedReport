
@{
    ViewData["Title"] = "FileUpload";
}

<!-- Content Start -->
<div class="content-wrapper">
    <!-- Heading Start -->
    <section class="heading">
        <h1 class="mb-2">File Upload</h1>
        <div class="breadcrumb-container">
            <div class="titles">
                <p>A file upload is the way of transmission of a file from one computer system to another.</p>
            </div>
        </div>
    </section><!-- Heading End -->
    <div class="row">
        <div class="col-12">
            <article class="card mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">Dropzone</h4>
                    <form action="#" class="dropzone" id="dropzone-demo">
                        <div class="dz-message">
                            Drop files here or click to upload
                            <span class="note">
                                (This is just a demo dropzone. Selected files are
                                <strong>not</strong> actually uploaded.)
                            </span>
                        </div>
                        <div class="fallback">
                            <input name="file" type="file" multiple>
                        </div>
                    </form>
                </div>
            </article>
        </div>
        <div class="col-12">
            <article class="card mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">Flow.js</h4>
                    <div class="flow-container">
                        <div class="flow-error alert alert-danger">
                            Your browser, unfortunately, is not supported by Flow.js. The library requires support for the HTML5 File API along with file slicing.
                        </div>
                        <div class="flow-drop py-5 px-3" ondragenter="$(this).addClass('flow-dragover')" ondragend="$(this).removeClass('flow-dragover')"
                             ondrop="$(this).removeClass('flow-dragover')">
                            <h4>Drop files here to upload or</h4>
                            <button type="button" class="flow-browse mr-2 mb-2 btn btn-secondary">Select from your computer</button>
                            <button type="button" class="flow-browse-image mr-2 mb-2 btn btn-secondary">Select images</button>
                            <button type="button" class="flow-browse-folder mr-2 mb-2 btn btn-secondary">Select folder</button>
                        </div>
                        <div class="flow-progress media d-none mt-4">
                            <div class="mr-3">
                                <button type="button" onclick="methods.upload(); return(false);" class="progress-resume-link mr-2 btn icon-btn btn-primary">
                                    <i class="mdi mdi-play"></i>
                                </button>
                                <button type="button" onclick="methods.pause(); return(false);" class="progress-pause-link mr-2 btn icon-btn btn-warning">
                                    <i class="mdi mdi-pause"></i>
                                </button>
                                <button type="button" onclick="methods.cancel(); return(false);" class="progress-cancel-link mr-2 btn icon-btn btn-danger">
                                    <i class="mdi mdi-close"></i>
                                </button>
                            </div>
                            <div class="media-body align-self-center">
                                <div class="progress progree-sm">
                                    <div class="progress-bar progress-bar-striped"></div>
                                </div>
                            </div>
                        </div>
                        <ul class="flow-list list-group d-none mt-4"></ul>
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>
<!-- Content End -->

@section Styles{
    <!-- ================== BEGIN PAGE LEVEL CSS START ================== -->
    <link rel="stylesheet" href="~/assets/vendor/dropzone/css/dropzone.css" />
    <!-- ================== BEGIN PAGE LEVEL END ================== -->
}

@section Scripts{
    <!-- ================== BEGIN PAGE LEVEL JS ================== -->
    <script src="~/assets/vendor/dropzone/js/dropzone.js"></script>
    <script src="~/assets/vendor/flowjs/js/flow.min.js"></script>
    <script src="~/assets/js/demo/file-upload-demo.js"></script>
    <!-- ================== END PAGE LEVEL JS ================== -->
}
