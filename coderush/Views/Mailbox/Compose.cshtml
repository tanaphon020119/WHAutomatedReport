
@{
    ViewData["Title"] = "Compose";
}

<!-- Content Start -->
<div class="content-wrapper">
    <div class="mail-compose-container">
        <form>
            <div class="form-group">
                <div class="form-labels to">
                    <label>To:</label>
                    <input type="text" class="form-control" />
                    <a href="javascript:void(0)"><i class="mdi mdi-chevron-down md-18"></i></a>
                </div>
                <div class="form-labels" style="display:none">
                    <label>cc:</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-labels" style="display:none">
                    <label>bcc:</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group from">
                <label>From:</label>
                <span>admin@example.com</span>
            </div>
            <div class="compose-body">
                <div class="form-labels subject mb-5">
                    <input type="text" class="form-control" placeholder="Subject" />
                </div>
                <div class="form-group no-border-b">
                    <div class="summernote">
                        Type your mail here
                    </div>
                </div>
                <div class="btns-holder">
                    <button class="btn btn-success mr-2">Send</button>
                    <button class="btn btn-secondary">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Content End -->

@section Styles{
    <!-- ================== BEGIN PAGE LEVEL CSS START ================== -->
    <link rel="stylesheet" href="~/assets/vendor/summernote/css/summernote.css" />
    <!-- ================== BEGIN PAGE LEVEL END ================== -->
}

@section Scripts{
    <!-- ================== BEGIN PAGE LEVEL JS ================== -->
    <script src="~/assets/vendor/summernote/js/summernote-bs4.min.js"></script>
    <script src="~/assets/js/demo/compose-mail-demo.js"></script>
    <!-- ================== END PAGE LEVEL JS ================== -->
}
